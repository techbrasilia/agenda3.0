<p id="notice"><%= notice %></p>

<h1>Compromissos</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Hora</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compromissos.each do |compromisso| %>
      <tr>
        <td><%= compromisso.data %></td>
        <td><%= compromisso.hora %></td>
        <td><%= compromisso.tipo %></td>
        <td><%= link_to 'Show', compromisso %></td>
        <td><%= link_to 'Edit', edit_compromisso_path(compromisso) %></td>
        <td><%= link_to 'Destroy', compromisso, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

